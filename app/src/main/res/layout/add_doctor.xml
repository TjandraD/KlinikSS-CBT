<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".activity.AddDoctor">
    <TextView
        style="@style/BasicTextView"
        android:text="@string/addDoctor"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:layout_marginBottom="15dp"/>

    <EditText
        android:id="@+id/inputName"
        style="@style/InputText.Name"/>

    <EditText
        android:id="@+id/inputUsername"
        style="@style/InputText.Email"
        android:inputType="text"
        android:hint="Username"
        android:drawableStart="@android:color/darker_gray"
        tools:ignore="TextFields" />

    <EditText
        android:id="@+id/inputPassword"
        style="@style/InputText.Password"
        android:drawableStart="@android:color/darker_gray"/>

    <Spinner
        android:id="@+id/clinicSpinner"
        android:popupBackground="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>