<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/bggradient</item>
    </style>

    <style name="BtnGeneral" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/designbutton</item>
    </style>

    <style name="InputText" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:lines">1</item>
    </style>

    <style name="InputText.Email">
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:hint">@string/email</item>
        <item name="android:drawableLeft">@drawable/ic_email</item>
    </style>

    <style name="InputText.Password">
        <item name="android:inputType">textWebPassword</item>
        <item name="android:hint">@string/password</item>
        <item name="android:drawableLeft">@drawable/ic_password</item>
    </style>

    <style name="InputText.Name">
        <item name="android:inputType">textPersonName</item>
        <item name="android:hint">@string/prsnName</item>
    </style>

    <style name="InputText.Address">
        <item name="android:inputType">textLongMessage</item>
        <item name="android:hint">@string/address</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="InputText.PhoneNo">
        <item name="android:inputType">phone</item>
        <item name="android:hint">@string/phone_no</item>
    </style>

    <style name="InputText.Age">
        <item name="android:inputType">number</item>
        <item name="android:hint">@string/age</item>
    </style>

    <style name="BasicTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BasicCardView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="BasicImageView">
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="BasicTextView.CardviewTitle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BtnGeneral.Cardview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">80dp</item>
        <item name="android:layout_marginStart">20dp</item>
    </style>

    <style name="BasicTextView.LeftUpperList">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="BasicTextView.RightUpperList">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="BasicTextView.LeftList">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="BasicTextView.RightList">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_width">0dp</item>
    </style>
</resources>
